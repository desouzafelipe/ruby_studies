<h1>Searching for <%= @search_term %></h1>
<p>Powered	By	Food2Fork.com</p>
<table border="1">
<tr>
	<th>Thumbnail</th>
	<th>Title</th>
	<th>Social Rank</th>
</tr>
 <% @recipes.each do |recipe| %>
<tr class=<%= cycle('even', 'odd') %>>
	<td><%=link_to(
					image_tag(recipe["image_url"], size: "100x100", alt: recipe["recipe_id"]), 
					recipe["source_url"]
				 	) %></td>
	<td><%= link_to(sanitize(recipe["title"]), recipe["source_url"], target: "_blank") %></td>
	<td><%= recipe["social_rank"] %></td>
</tr>
 <% end %>
</table>